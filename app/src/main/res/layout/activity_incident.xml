<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncidentActivity"
    android:id="@+id/constraint_incident">


    <LinearLayout
        android:id="@+id/linear_button_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Assign Checkpoint"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="392dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="MME"
                tools:layout_editor_absoluteX="183dp"
                tools:layout_editor_absoluteY="392dp"
                android:layout_margin="5dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/button3"
            android:layout_width="222dp"
            android:layout_height="50dp"
            android:text="Send Incidents"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="467dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_checkboxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toTopOf="@+id/linear_button_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:text="Block A"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="93dp"
            android:padding="10dp"
           android:background=""
            android:layout_marginBottom="5dp"
            />


        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:text="Block B"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="162dp"
            android:padding="10dp"
            android:background="@color/accent"
            android:layout_marginBottom="5dp"/>

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:text="Block C"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="226dp"
            android:padding="10dp"
            android:background="@color/accent"
            android:layout_marginBottom="5dp"/>

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:text="Block D"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="295dp"
            android:padding="10dp"
            android:background="@color/accent"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="363dp"
        android:layout_height="45dp"
        android:background="@color/primary_dark"
        android:gravity="center"
        android:text="Incidents"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraint_incident" />

    <ImageView
        android:id="@+id/backFromPatrol"
        android:layout_width="26dp"
        android:layout_height="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

</androidx.constraintlayout.widget.ConstraintLayout>